
/**********************************************
calculates the sine of a given angle
@param angle given angle
@return sine value of angle
**********************************************/

float sine(float angle)
{
    int i;
    float radVal = angle * M_PI / 180.0;
    float result = 0;
    for (i = 1; i < 10; i++)
    {
        result += pow(-1,i-1) * pow(radVal, 2*i - 1) / factorial(2*i - 1);
    }
    return result;
}
